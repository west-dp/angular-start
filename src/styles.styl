@import url('https://fonts.googleapis.com/css?family=Roboto&display=swap');

body
	font-family: 'Roboto', sans-serif;

.button
	background-color black
	border solid 1px black
	font-size 18px
	font-weight 500
	letter-spacing 0.3px
	color white
	padding 10px 20px
	text-transform uppercase
	cursor pointer
	text-align center
	min-width 140px
	min-height 36px
	outline none
	transition 0.3s all
	&:hover
		background-color white
		border solid 1px black
		color black
	&:disabled
		pointer-events none
		opacity 0.5

